<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ishaan.todolists.AddToList"
    tools:showIn="@layout/activity_add_to_list">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:background="@drawable/box"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <EditText
            android:layout_width="match_parent"
            android:hint="Type todolist message here..."
            android:background="@null"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:maxLength="128"
            android:textSize="20sp"
            android:id="@+id/todo_item"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/purpleback"
        android:layout_toRightOf="@+id/purpleback"
        android:layout_marginLeft="10dp"
        android:background="#4CAF50"
        android:layout_toEndOf="@+id/purpleback"
        android:id="@+id/greenback" />

    <Button
        android:layout_width="60dp"
        android:background="#fff"
        android:id="@+id/whiteback"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/greenback"
        android:layout_toRightOf="@+id/greenback"
        android:layout_toEndOf="@+id/greenback" />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="#9C27B0"
        android:layout_below="@+id/relativeLayout"
        android:layout_toRightOf="@+id/redback"
        android:layout_toEndOf="@+id/redback"
        android:id="@+id/purpleback" />
    <Button
        android:layout_width="60dp"
        android:background="#F44336"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/redback" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Pick a color"
        android:textColor="#000"
        android:id="@+id/picktext"
        android:textSize="17sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/purpleback"
        android:layout_toLeftOf="@+id/greenback"
        android:layout_toStartOf="@+id/greenback"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:background="@drawable/ic_location_on_black_48dp"
        android:layout_height="wrap_content"
        android:id="@+id/place_picker"
        android:layout_below="@+id/timeset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Pick a Place"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/place"
        android:layout_alignBottom="@+id/place_picker"
        android:layout_alignLeft="@+id/duetime"
        android:layout_alignStart="@+id/duetime" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_below="@+id/picktext"
        android:background="@drawable/ic_date_range_black_48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/dateset" />



    <ImageButton
        android:layout_width="wrap_content"
        android:background="@drawable/ic_schedule_black_48dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/dateset"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/timeset" />

    <TextView
        android:layout_width="wrap_content"
        android:text="HH-MM-SS"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:id="@+id/duetime"
        android:layout_alignBottom="@+id/timeset"
        android:layout_toRightOf="@+id/redback"
        android:layout_toEndOf="@+id/redback" />
    <TextView
        android:layout_width="wrap_content"
        android:text="DD-MM-YY"
        android:id="@+id/duedate"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_height="wrap_content"
        android:layout_above="@+id/timeset"
        android:layout_toRightOf="@+id/redback"
        android:layout_toEndOf="@+id/redback" />







</RelativeLayout>
